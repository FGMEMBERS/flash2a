<?xml version="1.0"?>
<PropertyList>

 <sim>

  <description>Mainair Flash 2 Alpha</description>
  <author>Stuart Buchanan</author>
  <status>beta</status>

  <flight-model archive="y">jsb</flight-model>
  <aero archive="y">flash2a</aero>

  <model>
   <path archive="y">Aircraft/flash2a/Models/flash2a.xml</path>
  </model>

  <help>
   <title>Flash 2 Alpha</title>
   <line>Speeds:</line>
   <line>Vy  42 mph</line>
   <line>Vne 89 mph</line>
   <line>Cruise 49 mph</line>
   <line>Min approach (engine idle): 42 mph</line>
   <line></line>
   <line>Take-off run (clear 15m obstacle): 230m</line>
   <line>Landing run (clear 15m obstacle): 181m</line>
   <line></line>
   <line>Climb Rate: 500 fpm</line>
   <line>Descent Rate: 550fpm</line>
   <line></line>
   <line>Max wind operation conditions</line>
   <line>Headwind - 18 kts </line>
   <line>Crosswind - 8 kts </line>
   <line></line>
   <line>_STARTUP_CHECKLIST_</line>
   <line>S - Security</line>
   <line>T - Hand Throttle closed (on left side).</line>
   <line>A - All Clear</line>
   <line>M - Magnetoes on (on right side)</line>
   <line>P - Clear Prop, pull starter (under panel)</line>

   <line></line>
   <line>_RUN_UP_CHECKLIST_</line>
   <line>C - Controls - full and free movement</line>
   <line>H - Harness - secure</line>
   <line>I - Instruments - set altimeter, check other gauges</line>
   <line>E - Engines - check choke, magneto check</line>
   <line>F - Fuel</line>
   <line></line>
   <line>T - Trim (none present), check whizz-pins</line>
   <line>A - All Clear</line>
   <line>P - Power - full power on take-off</line>
  </help>
 
  <panel>
   <visibility archive="y">false</visibility>
  </panel>

  <!-- position the pilot viewpoint and angle -->
 
  <view>
   <internal archive="y">true</internal>
   <config>
     <x-offset-m archive="y">0.0</x-offset-m>
     <y-offset-m archive="y">0.65</y-offset-m>
     <z-offset-m archive="y">1.3</z-offset-m>
     <pitch-offset-deg>-10.0</pitch-offset-deg>
   </config>
  </view>

  <systems>
    <autopilot>
      <path>Aircraft/Generic/generic-autopilot.xml</path>
    </autopilot>
    <electrical>
      <path>Aircraft/Generic/generic-electrical.xml</path>
    </electrical>
  </systems>

  <sound>
   <path archive="y">Aircraft/flash2a/flash2a-sound.xml</path>
  </sound>

 </sim>
  
 <!-- trim for level cruise -->

 <controls>
  <flight>
   <aileron-trim>0.027</aileron-trim>
   <rudder-trim>0.0</rudder-trim>
   <elevator-trim>-0.091</elevator-trim>

  </flight>
  <engines>
   <engine n="0">
    <magnetos>0</magnetos>
    <handthrottle>0.0</handthrottle>
   </engine>
  </engines>
 </controls>

 <autopilot>
   <config>
     <min-climb-speed-kt type="float">70.0</min-climb-speed-kt>
     <best-climb-speed-kt type="float">75.0</best-climb-speed-kt>
     <target-climb-rate-fpm type="float">500.0</target-climb-rate-fpm>
     <target-descent-rate-fpm type="float">1000.0</target-descent-rate-fpm>
     <elevator-adj-factor type="float">4000.0</elevator-adj-factor>
     <integral-contribution type="float">0.01</integral-contribution>
     <zero-pitch-throttle type="float">0.45</zero-pitch-throttle>
     <zero-pitch-trim-full-throttle type="float">0.14</zero-pitch-trim-full-throttle>
   </config>
 </autopilot>

 <consumables>
  <fuel>
   <tank n="0">
    <level-gal_us>5.28</level-gal_us>
   </tank>
   <tank n="1">
    <level-gal_us>5.28</level-gal_us>
   </tank>
  </fuel>
 </consumables>

 <instrumentation>
  <attitude-indicator>
   <config>
    <tumble-flag archive="y" type="bool">true</tumble-flag>
   </config>
  </attitude-indicator>
  <encoder>
   <serviceable type="bool">true</serviceable>
  </encoder>
 </instrumentation>
  
 <engines>
  <engine>
   <rpm type="double">0</rpm>
  </engine>
 </engines>

<fdm>
  <jsbsim>
    <config>
      <Drag_at_zero_lift>0.5</Drag_at_zero_lift>
      <Elevator_drag>1.0</Elevator_drag>
      <Induced_drag>0.01</Induced_drag>
      <Lift_due_to_alpha>1.0</Lift_due_to_alpha>
    </config>
  </jsbsim>
</fdm>

<nasal>
  <handthrottle>
    <file>Aircraft/flash2a/Nasal/handthrottle.nas</file>
  </handthrottle>
</nasal>

  
</PropertyList>
