<?xml version="1.0"?>

<PropertyList>

 <path>flash2a.ac</path>

 <!-- 3D Panel -->

 <model>
  <name>ASI</name>
  <path>Aircraft/flash2a/Models/asi/asi.xml</path>
  <offsets>
   <x-m>0.745</x-m>
   <y-m>-0.14</y-m>
   <z-m>0.33</z-m>
   <pitch-deg>-35</pitch-deg>
  </offsets>
 </model>


 <model>
  <name>Altimeter</name>
  <path>Aircraft/flash2a/Models/alt/alt.xml</path>
  <offsets>
   <x-m>0.725</x-m>
   <y-m>-0.06</y-m>
   <z-m>0.36</z-m>
   <pitch-deg>-35</pitch-deg>
  </offsets>
 </model>

 <model>
  <name>Compass</name>
  <path>Aircraft/flash2a/Models/compass/compass.xml</path>
  <offsets>
   <x-m>0.75</x-m>
   <y-m>0.0</y-m>
   <z-m>0.33</z-m>
  </offsets>
 </model>

 <model>
  <name>RPM</name>
  <path>Aircraft/flash2a/Models/rpm/rpm.xml</path>
  <offsets>
   <x-m>0.745</x-m>
   <y-m>0.14</y-m>
   <z-m>0.33</z-m>
   <pitch-deg>-35</pitch-deg>
  </offsets>
 </model>

